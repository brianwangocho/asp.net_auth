@model Auth4.Models.Tasks


<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="myModalLabel">Edit Task @Model.Name</h4>
    </div>
    <hr />
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ActvityId)
    <br />
    Name : @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    <br />
    AssignTo : @Html.DropDownList("User", (IEnumerable<SelectListItem>)ViewBag.Users, "Select User ..", new { @class = "form-control" })

    <hr />
    <input type="button" value="update task" />



</div>


<script>

    function updateTask() {
        var Id = $("#Id").val()
        var ActivityId = $("#ActivityId").val()
        var Name = $('#Name').val();
        var Task = { "Id": Id, "ActivityId": ActivityId, "Name": Name }

        $.post('/Tasks/Edit', Task, function (data) {
            if (data == 0) {
                location: location.href;
            }

        }, 'json');
        alert("Task updated successfully")
    }
</script>

